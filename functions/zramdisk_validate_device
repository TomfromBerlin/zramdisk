zramdisk_validate_device() {
zramdisk_debug "${ZRAMDISK_COLOR_CYAN}zramdisk_validate_device:${ZRAMDISK_COLOR_NC} Reached function zramdisk_validate_device" >&2
    emulate -L zsh
    local dev="$1"
    [[ "${dev}" =~ ^zram[1-9][0-9]*$ ]]
}
